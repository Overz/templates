{
  "name": "template",
  "version": "1.0.0",
  "description": "Template de backend com TDD & MVC",
  "main": "index.ts",
  "scripts": {
    "clean": "rm -rf ./build/*",
    "start": "ts-node src/index.ts",
    "dev": "ts-node-dev src/index.ts --poll --transpile-only --ignore-watch node_modules",
    "build": "npm run clean && tsc -p tsconfig.prod.json --removeComments",
    "test": "jest",
    "watch": "jest --watchAll --no-cache",
    "style": "prettier --check 'src/**/*.ts'",
    "lint": "eslint --max-warnings=0",
    "coverage": "jest --coverage",
    "check": "npm run style && npm run lint && npm run coverage",
    "orm": "ts-node-dev ./node_modules/typeorm/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Overz/typescript-templates"
  },
  "keywords": [
    "mvc",
    "tdd",
    "typescript",
    "template"
  ],
  "license": "MIT",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./src/test/setup.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80
      }
    }
  },
  "dependencies": {
    "@types/cookie-parser": "1.4.2",
    "@types/express": "4.17.11",
    "@types/multer": "1.4.5",
    "@types/node": "14.14.25",
    "body-parser": "1.19.0",
    "cookie-parser": "1.4.5",
    "env-var": "7.0.0",
    "express": "4.17.1",
    "express-async-errors": "3.1.1",
    "express-validator": "6.9.2",
    "multer": "1.4.2",
    "mysql": "2.18.1",
    "reflect-metadata": "^0.1.10",
    "typeorm": "0.2.30",
    "typescript": "4.1.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@types/jest": "26.0.20",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "eslint": "7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "3.3.1",
    "husky": "4.3.8",
    "jest": "^26.6.3",
    "node-mocks-http": "^1.10.1",
    "prettier": "2.2.1",
    "sqlite3": "^5.0.1",
    "supertest": "^6.1.1",
    "ts-jest": "^26.4.4",
    "ts-node-dev": "1.1.1",
    "ts-node": "3.3.0",
    "@types/node": "^8.0.29",
    "typescript": "3.3.3333"
  }
}
